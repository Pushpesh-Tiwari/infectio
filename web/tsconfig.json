{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "bundler",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "infectio-wasm": ["../infectiowasm/pkg/infectiowasm"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
